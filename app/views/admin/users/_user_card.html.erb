<div id="<%= dom_id user, :card %>" class="card flex flex-col p-4">
  <div class="flex justify-between items-start">
    <div class="flex flex-col gap-1">
      <div class="flex items-center gap-2">
        <span class="text-lg font-semibold text-main"><%= user.username %></span>
        <% if user.admin? %>
          <span class="bg-purple-100 text-purple-700 pi-2 rounded-md font-semibold">ADMIN</span>
        <% end %>
      </div>
      <span class="text-sm text-subtle"><%= user.email %></span>
      <div class="mt-2">
        <% if user.verified? %>
          <span class="text-green-600 text-xs flex items-center gap-1"><span class="icon icon--circle-check"></span> Verified</span>
        <% else %>
          <span class="text-orange-500 text-xs">Unverified</span>
        <% end %>
      </div>
    </div>

    <div class="flex flex-col items-end gap-3">
      <%= link_to "Edit", edit_admin_user_path(user), class: "text-xs text-orange-500 font-semibold", data: { turbo_frame: "modal" } %>
      
      <% delete_trigger = button_tag "Delete", type: "button", class: "text-xs text-subtle hover:text-red-500", data: { action: "dialog#showModal" } %>
      <%= modal_dialog delete_trigger, size: "400px", title: "Delete user?" do %>
        <p class="text-sm text-subtle mbe-4">Are you sure you want to remove <strong><%= user.username %></strong>?</p>
        <div class="flex items-center justify-end gap-2">
          <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
          <%= button_to "Delete", admin_user_path(user), method: :delete, class: "btn bg-red-500 text-white" %>
        </div>
      <% end %>
    </div>
  </div>
</div>