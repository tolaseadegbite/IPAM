<tr id="<%= dom_id(device, :table_row) %>">
  <td class="p-4">
    <div class="font-semibold"><%= link_to device.name, device, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></div>
    <div class="text-xs text-subtle"><%= device.device_type.humanize %></div>
  </td>
  <td class="p-4 text-sm">
    <div class="font-mono"><%= device.serial_number %></div>
    <div class="text-xs text-subtle">Tag: <%= device.asset_tag %></div>
  </td>
  <td class="p-4 font-mono text-sm text-sky-500">
    <%= device.ip_address&.address || "Unassigned" %>
  </td>
  <td class="p-4 text-sm">
    <% if device.employee %>
      <%= device.employee.full_name %>
      <div class="text-xs text-subtle"><%= device.department.name %></div>
    <% else %>
      <span class="text-subtle italic">In Stock</span>
    <% end %>
  </td>
  <td class="p-4 text-xs font-semibold uppercase"><%= device.status %></td>
  <td class="text-end">
    <div class="flex items-center justify-end gap-4">
      <%= link_to "Edit", edit_device_path(device), class: "text-orange-600 hover:underline", data: { turbo_frame: "modal" } %>
      <%= button_to "Delete", device, method: :delete, class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </td>
</tr>