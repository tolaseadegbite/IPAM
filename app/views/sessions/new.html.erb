<div class="p-4 i-full bg-main" style="max-inline-size: 25rem;">
  <div class="text-center">
    <div class="mbe-5">
      <%= link_to root_path, class: "flex items-center gap-2 mi-auto rounded-lg border i-fit pie-2" do %>
        <%= image_tag("logo.png", size: 80) %>
        <span class="text-5xl font-semibold">AM</span>
      <% end %>
    </div>
    <h1 class="font-semibold text-3xl mbe-5">Sign In</h1>
  </div>

  <%= form_with(url: sign_in_path) do |form| %>
        
    <div class="mbe-5">
      <%= form.label :username, style: "display: block", class: "font-semibold mbe-2" %>
      <%= form.text_field :username, value: params[:username_hint], placeholder: "tolase", required: true, autofocus: true, autocomplete: "username", class: "input" %>
    </div>

    <div class="mbe-5">
      <%= form.label :password, style: "display: block", class: "font-semibold mbe-2" %>
      <%= form.password_field :password, required: true, placeholder: "***********", autocomplete: "current-password", class: "input" %>
    </div>

    <div>
      <%= form.submit "Sign in", class: "btn bg-orange-400 hover:bg-orange-500 i-full" %>
    </div>
  <% end %>

  <br>

  <!--<div class="text-sm text-center">
    <%#= button_to "Sign in with OmniAuth", "/auth/developer", "data-turbo" => false %>
  </div>-->

  <div class="text-sm text-center">
    <%#= link_to "Sign up", sign_up_path %>
    <%= link_to "Forgot your password?", new_identity_password_reset_path %>
  </div>
</div>