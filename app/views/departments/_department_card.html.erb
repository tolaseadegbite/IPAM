<div id="<%= dom_id department, :card %>" class="card flex flex-col">
  <div class="flex justify-between">
    <div class="flex flex-col gap-4">
      <span class="text-lg font-semibold"><%= link_to department.name, department, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></span>

      <div>
        <div class="flex items-center gap-2 text-sm text-subtle">
          <span class="icon icon--building"></span>
          <span>Located in <strong><%= department.branch.name %></strong></span>
        </div>
        
        <div class="flex gap-4 text-sm text-subtle items-center mbs-2">
          <span><%= department.employees.count %> Employees</span>
          <span><%= department.devices.count %> Devices</span>
        </div>
      </div>
    </div>

    <%# --- Actions --- %>
    <div class="flex flex-col items-start justify-center text-xs gap-4">
      <%= link_to "Edit", edit_department_path(department), class: "text-subtle hover:text-orange-500", data: { turbo_frame: "modal" } %>
      <% delete_trigger = button_tag "Delete", type: "button", class: "text-subtle hover:text-orange-500", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
      <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{department.name}'?" do %>
        <p class="text-sm text-subtle mbe-4">This will permanently delete this department. This action cannot be undone.</p>
        <div class="flex items-center justify-end gap">
          <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
          <%= button_to "Continue", department, method: :delete, class: "btn btn--negative" %>
        </div>
      <% end %>
    </div>
  </div>
</div>