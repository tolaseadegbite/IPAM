<div id="<%= dom_id department, :card %>" class="card flex flex-col gap-3">
  <div class="flex items-center justify-between">
    <h3 class="font-bold text-lg"><%= link_to department.name, department, class: "hover:text-orange-600", data: { turbo_frame: "_top" } %></h3>
    
    <div class="flex items-center gap-3">
      <%= link_to "Edit", edit_department_path(department), class: "text-sm text-orange-600 font-medium", data: { turbo_frame: "modal" } %>
      <%= button_to "Delete", department, method: :delete, class: "text-sm text-red-600 bg-transparent border-0 cursor-pointer font-medium", form: { data: { turbo_confirm: "Are you sure? This will fail if employees exist." } } %>
    </div>
  </div>

  <div class="flex items-center gap-2 text-sm text-subtle">
    <span class="icon icon--building"></span>
    <span>Located in <strong><%= department.branch.name %></strong></span>
  </div>
  
  <div class="flex gap-4 text-sm text-subtle items-center">
    <span><%= department.employees.count %> Employees</span>
    <span><%= department.devices.count %> Devices</span>
  </div>
</div>