<% content_for :title, @department.name %>

<% content_for :page_header do %>
  <%= @department.name %>
<% end %>

<% content_for :header_action_buttons do %>
  <div class="flex items-center gap-2">
    <%= link_to "Edit", edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded px-4 py-2 show@md", data: { turbo_frame: "modal" } %>

    <% delete_trigger = button_tag "Delete", type: "button", class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
    <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{@department.name}'?" do %>
      <p class="text-sm text-subtle mbe-4">This will permanently delete this department. This action cannot be undone.</p>
      <div class="flex items-center justify-end gap">
        <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
        <%= button_to "Continue", @department, method: :delete, data: { turbo: false }, class: "btn btn--negative" %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="absolute hide@md" style="bottom: 10rem; right: 1rem; z-index: 9999">
  <%= link_to edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded-full p-5", data: { turbo_frame: "modal" } do %>
    <span class="icon icon--square-pen"></span>
  <% end %>
</div>

<div class="p-4 max-w-5xl mx-auto">
  <div class="flex items-center justify-between mbe-6">
    <div class="flex items-center gap-4">
      <%= link_to departments_path, class: "btn btn--subtle btn--icon" do %>
        <span class="icon icon--chevron-left"></span>
      <% end %>
      <div id="department_details">
        <%= render "departments/department_details" %>
      </div>
    </div>
    <%#= link_to "Edit", edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded px-4 py-2", data: { turbo_frame: "modal" } %>
  </div>

  <div class="grid grid-cols-1 grid-cols-2@md gap-6">
    <%# --- Employee List --- %>
    <div class="col-span-1">
      <div class="flex items-center justify-between mbe-4 border-be pbe-2">
        <h3 class="font-bold text-lg">Employees (<%= @department.employees.count %>)</h3>
        <%= link_to "Add Employee", new_employee_path(department_id: @department.id), class: "text-sm text-orange-600 hover:underline", data: { turbo_frame: "modal" } %>
      </div>

      <%= content_tag(:ul, id: dom_id(@department, :employees), class: "flex flex-col gap-2") do %>
        <% @employees.each do |employee| %>
          <%= render "departments/employee_show_card", employee: employee %>
        <% end %>
      <% end %>

      <% if @department.employees.empty? %>
        <p id="no_employees_message" class="text-subtle italic">No employees assigned.</p>
      <% end %>
    </div>

    <%# --- Device List --- %>
    <div class="col-span-1">
      <div class="flex items-center justify-between mbe-4 border-be pbe-2">
        <h3 class="font-bold text-lg">Devices (<%= @department.devices.count %>)</h3>
        <%= link_to "Add Device", new_device_path(department_id: @department.id), class: "text-sm text-orange-600 hover:underline", data: { turbo_frame: "modal" } %>
      </div>

      <%= content_tag(:div, id: dom_id(@department, :devices), class: "grid grid-cols-1 grid-cols-2@md gap-2") do %>
        <% @devices.each do |device| %>
          <%= render "departments/device_show_card", device: device %>
        <% end %>
      <% end %>

      <% if @department.devices.empty? %>
        <p id="no_devices_message" class="text-subtle italic">No devices assigned.</p>
      <% end %>
    </div>
  </div>

  <%# --- AUDIT LOG SECTION --- %>
  <div class="mbs-6">
    <% 
      # 1. Department History (Self)
      dept_query = PaperTrail::Version.where(item_type: 'Department', item_id: @department.id)

      # 2. Employee History (Children)
      emp_query = PaperTrail::Version.where(item_type: 'Employee', item_id: @department.employee_ids)

      # 3. Device History (Children)
      dev_query = PaperTrail::Version.where(item_type: 'Device', item_id: @department.device_ids)

      # 4. Merge, Sort, and Limit
      combined_versions = dept_query.or(emp_query).or(dev_query).order(created_at: :desc).limit(20)
    %>

    <%= render "shared/audit_log", records: combined_versions, parent: @department %>
  </div>

</div>