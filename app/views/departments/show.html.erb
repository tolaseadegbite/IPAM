<% content_for :title, @department.name %>

<% content_for :page_header do %>
    <%= @department.name %>
<% end %>

<% content_for :header_action_buttons do %>
  <%= link_to "Edit", edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded px-4 py-2", data: { turbo_frame: "modal" } %>

<% end %>

<div class="p-4 max-w-5xl mx-auto">
  <div class="flex items-center justify-between mbe-6">
    <div class="flex items-center gap-4">
      <%= link_to departments_path, class: "btn btn--subtle btn--icon" do %>
        <span class="icon icon--chevron-left"></span>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold"><%= @department.name %></h1>
        <div class="text-subtle text-sm">
          Branch: <%= link_to @department.branch.name, @department.branch, class: "hover:underline text-orange-500" %>
        </div>
      </div>
    </div>
    <%#= link_to "Edit", edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded px-4 py-2", data: { turbo_frame: "modal" } %>
  </div>

  <div class="grid grid-cols-1 grid-cols-2@md gap-6">
    <%# --- Employee List --- %>
    <div class="col-span-1">
      <h3 class="font-bold text-lg mbe-4 border-be pbe-2">Employees (<%= @department.employees.count %>)</h3>
      <% if @department.employees.any? %>
        <ul class="flex flex-col gap-2 max-h-96 overflow-y-auto">
          <% @department.employees.each do |employee| %>
            <li class="card  p-2">
              <%= link_to employee, class: "flex items-center justify-between hover:text-orange-600" do %>
                <span class="font-medium"><%= employee.first_name %> <%= employee.last_name %></span>
                <span class="text-xs text-sky-500 px-2 py-1 rounded"><%= employee.status.humanize %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-subtle italic">No employees assigned.</p>
      <% end %>
    </div>

    <%# --- Device List --- %>
    <div class="col-span-1">
      <h3 class="font-bold text-lg mbe-4 border-be pbe-2">Devices (<%= @department.devices.count %>)</h3>
      <% if @department.devices.any? %>
        <ul class="flex flex-col gap-2 max-h-96 overflow-y-auto">
          <% @department.devices.each do |device| %>
            <li class="p-2 border rounded-lg">
              <%= link_to device, class: "block hover:text-orange-600" do %>
                <div class="flex justify-between">
                  <span class="font-medium text-sm"><%= device.name %></span>
                  <span class="text-xs text-subtle font-mono"><%= device.asset_tag %></span>
                </div>
                <div class="text-xs text-subtle"><%= device.device_type.humanize %></div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-subtle italic">No devices assigned.</p>
      <% end %>
    </div>
  </div>
</div>