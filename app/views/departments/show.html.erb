<% content_for :title, @department.name %>

<% content_for :page_header do %>
  <%= @department.name %>
<% end %>

<% content_for :header_action_buttons do %>
  <div class="flex items-center gap-2">
    <%= link_to "Edit", edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded px-4 py-2 show@md", data: { turbo_frame: "modal" } %>

    <% delete_trigger = button_tag "Delete", type: "button", class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
    <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{@department.name}'?" do %>
      <p class="text-sm text-subtle mbe-4">This will permanently delete this department. This action cannot be undone.</p>
      <div class="flex items-center justify-end gap">
        <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
        <%= button_to "Continue", @department, method: :delete, data: { turbo: false }, class: "btn btn--negative" %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="absolute hide@md" style="bottom: 10rem; right: 1rem; z-index: 9999">
  <%= link_to edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded-full p-5", data: { turbo_frame: "modal" } do %>
    <span class="icon icon--square-pen"></span>
  <% end %>
</div>

<div class="p-4 max-w-5xl mx-auto">
  <div class="flex items-center justify-between mbe-6">
    <div class="flex items-center gap-4">
      <%= link_to departments_path, class: "btn btn--subtle btn--icon" do %>
        <span class="icon icon--chevron-left"></span>
      <% end %>
      <div id="department_details">
        <%= render "departments/department_details" %>
      </div>
    </div>
    <%#= link_to "Edit", edit_department_path(@department), class: "btn bg-orange-400 text-white font-semibold rounded px-4 py-2", data: { turbo_frame: "modal" } %>
  </div>

  <div class="grid grid-cols-1 grid-cols-2@md gap-6">
    <%# --- Employee List --- %>
    <div class="col-span-1">
      <h3 class="font-bold text-lg mbe-4 border-be pbe-2">Employees (<%= @department.employees.count %>)</h3>
      <% if @department.employees.any? %>
        <ul class="flex flex-col gap-2 max-h-96 overflow-y-auto">
          <% @department.employees.each do |employee| %>
            <li class="card rounded-md p-2">
              <%= link_to employee, class: "flex items-center justify-between hover:text-orange-600" do %>
                <span class="font-medium"><%= employee.first_name %> <%= employee.last_name %></span>

                <% status_color = case employee.status 
                when 'active' then 'bg-green-100 text-green-800'
                when 'on_leave' then 'bg-yellow-100 text-yellow-800'
                when 'terminated' then 'bg-red-100 text-red-800'
                end %>

                <span class="text-xs <%= status_color %> pi-2 pb-1 border rounded-md"><%= employee.status.humanize %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-subtle italic">No employees assigned.</p>
      <% end %>
    </div>

    <%# --- Device List --- %>
    <div class="col-span-1">
      <h3 class="font-bold text-lg mbe-4 border-be pbe-2">Devices (<%= @department.devices.count %>)</h3>
      <% if @department.devices.any? %>
        <ul class="flex flex-col gap-2 max-h-96 overflow-y-auto">
          <% @department.devices.each do |device| %>
            <li class="p-2 border rounded-md">
              <%= link_to device, class: "block hover:text-orange-600" do %>
                <div class="flex justify-between">
                  <span class="font-medium text-sm"><%= device.name %></span>
                  <span class="text-xs text-subtle font-mono"><%= device.asset_tag %></span>
                </div>
                <div class="text-xs text-subtle"><%= device.device_type.humanize %></div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-subtle italic">No devices assigned.</p>
      <% end %>
    </div>
  </div>
</div>