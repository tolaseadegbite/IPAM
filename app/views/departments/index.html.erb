<% content_for :title, "Departments" %>

<% content_for :page_header do %>
  <h4 class="font-semibold">Departments</h4>
<% end %>

<% content_for :header_action_buttons do %>
    <%= link_to "New Department", new_department_path,
                  class: "btn bg-orange-400 text-white font-semibold rounded-md p-2 show@md",
                  data: { turbo_frame: "modal" } %>
<% end %>

<div class="absolute hide@md" style="bottom: 10rem; right: 1rem; z-index: 9999">
  <%= link_to new_department_path, class: "btn bg-orange-400 text-white font-semibold rounded-full p-5", data: { turbo_frame: "modal" } do %>
    <span class="icon icon--plus"></span>
  <% end %>
</div>

<div class="p-4 i-full">

  <%= render "search_form" %>

  <%= turbo_frame_tag :departments_table do %>
    
    <%# --- DESKTOP VIEW: Table (Visible on medium screens and up) --- %>
    <div class="show@md relative i-full overflow-x-auto border rounded-md bg-surface">
      <table class="table i-full text-left">
        <thead class="bg-shade font-semibold">
          <tr>
            <th class="p-4"><%= sort_link(@search, :name, class: "font-semibold") %></th>
            <th class="p-4"><%= sort_link(@search, :branch_name, "Branch", class: "font-semibold") %></th>
            <th class="p-4 text-end">Actions</th>
          </tr>
        </thead>
        <tbody id="departments-table">
          <% if @departments.empty? %>
            <tr><td colspan="7" class="text-center p-8">No Results.</td></tr>
          <% else %>
            <%= render @departments %>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# --- MOBILE VIEW: Cards (Hidden on medium screens and up) --- %>
    <div id="departments-cards" class="hide@md flex flex-col gap-4">
      <% if @departments.empty? %>
        <p class="text-subtle text-center p-8">No departments found.</p>
      <% else %>
        <%= render partial: "departments/department_card", collection: @departments, as: :department %>
      <% end %>
    </div>

    <%= render "shared/pagination", pagy: @pagy %>
  <% end %>
</div>