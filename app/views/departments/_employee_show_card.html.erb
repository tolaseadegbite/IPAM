<%= link_to employee, class: "list-row list-row--link flex items-center justify-between hover:text-orange-600" do %>
    <h5 class="text-sm leading-none font-medium"><%= employee.full_name %></h5>
    
    <% status_color = case employee.status 
        when 'active' then 'bg-green-100 text-green-800'
        when 'on_leave' then 'bg-yellow-100 text-yellow-800'
        when 'terminated' then 'bg-red-100 text-red-800'
        end %>

    <span class="text-xs <%= status_color %> pi-2 pb-1 border rounded-md"><%= employee.status.humanize %></span>
<% end %>