<tr id="<%= dom_id(department, :table_row) %>">
  <td class="p-4 font-semibold"><span><%= link_to department.name.titleize, department, class: "text-lg text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></span></td>

  <td class="p-4"><span><%= department.branch.name %></span></td>

  <td class="flex items-center justify-end gap-4">
    <%= link_to "Edit", edit_department_path(department),
                class: "text-orange-500 hover:text-orange-600",
                data: { turbo_frame: "modal" } %>

    <% delete_trigger = button_tag "Delete", type: "button", class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
    <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{department.name}'?" do %>
      <p class="text-sm text-subtle mbe-4">This will permanently delete this department. This action cannot be undone.</p>
      <div class="flex items-center justify-end gap">
        <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
        <%= button_to "Continue", department, method: :delete, class: "btn btn--negative" %>
      </div>
    <% end %>
  </td>
</tr>