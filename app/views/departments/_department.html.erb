<tr id="<%= dom_id department %>" class="">
  <td class="p-4 font-medium"><%= link_to department.name, department, class: "hover:text-orange-600", data: { turbo_frame: "_top" } %></td>
  <td class="p-4"><span class=""><%= department.branch.name %></span></td>
  <td class="p-4 text-end">
    <div class="flex justify-end gap-2">
      <%= link_to "Edit", edit_department_path(department), class: "text-orange-600", data: { turbo_frame: "modal" } %>
      <%= button_to "Delete", department, method: :delete, class: "text-red-600 bg-transparent border-0", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </td>
</tr>