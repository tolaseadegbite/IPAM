<div class="p-4 i-full">
  <div class="flex items-center justify-between mbe-6">
    <h1 class="text-3xl font-semibold">Network Subnets</h1>
    <%= link_to "Add Subnet", new_subnet_path, class: "btn bg-orange-400 text-white font-semibold rounded-md p-2", data: { turbo_frame: "new_subnet" } %>
  </div>

  <%= turbo_frame_tag "new_subnet" %>

  <%= turbo_frame_tag "subnets" do %>
    <div class="show@md relative i-full overflow-x-auto border rounded-md bg-surface">
      <table class="table i-full text-left">
        <thead class="bg-shade text-subtle font-semibold border-b">
          <tr>
            <th class="p-4">Name</th>
            <th class="p-4">Network / CIDR</th>
            <th class="p-4">Gateway</th>
            <th class="p-4">VLAN</th>
            <th class="p-4">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <%= render @subnets %>
        </tbody>
      </table>
    </div>

    <div class="hide@md flex flex-col gap-4">
      <%= render partial: "subnets/subnet_card", collection: @subnets, as: :subnet %>
    </div>
  <% end %>
</div>