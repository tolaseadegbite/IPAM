<div id="<%= dom_id subnet, :card %>" class="card p-4 flex flex-col gap-3">
  
  <%# --- Header: Name & VLAN --- %>
  <div class="flex items-center justify-between border-be pbe-2">
    <span class="text-lg font-semibold"><%= link_to subnet.name, subnet, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></span>
    <% if subnet.vlan_id.present? %>
      <span class="text-sm font-mono bg-shade border border-gray-200 pi-2 pb-1 rounded-md">
        VLAN <%= subnet.vlan_id %>
      </span>
    <% end %>
  </div>

  <%# --- Network Details --- %>
  <div class="grid grid-cols-2 gap-4">
    <div>
      <span class="block text-sm text-subtle uppercase font-bold mbe-1">Network / CIDR</span>
      <span class="font-mono text-sm bg-blue-50 text-blue-700 pi-2 pb-1 rounded-md inline-block">
        <%= subnet.network_address %>
      </span>
    </div>

    <div class="flex justify-end">
      <div>
        <span class="block text-sm text-subtle uppercase font-bold mbe-1 text-end">Gateway</span>
        <span class="font-mono text-sm">
          <%= subnet.gateway %>
        </span>
      </div>
    </div>
  </div>

  <%# --- Stats / Count --- %>
  <div class="flex items-center gap-2 text-sm text-subtle">
    <span class="icon icon--server"></span>
    <span><%= subnet.ip_addresses.count %> Total IPs</span>
  </div>

  <%# --- Actions --- %>
  <div class="flex items-center justify-end text-xs gap-4">
    <%= link_to "Edit", edit_subnet_path(subnet), class: "text-subtle hover:text-orange-500", data: { turbo_frame: "modal" } %>
    <% delete_trigger = button_tag "Delete", type: "button", class: "text-subtle hover:text-orange-500", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
    <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{subnet.name}'?" do %>
      <p class="text-sm text-subtle mbe-4">This will permanently delete this subnet. This action cannot be undone.</p>
      <div class="flex items-center justify-end gap">
        <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
        <%= button_to "Continue", subnet, method: :delete, class: "btn btn--negative" %>
      </div>
    <% end %>
  </div>
</div>