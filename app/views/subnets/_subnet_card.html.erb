<div id="<%= dom_id subnet, :card %>" class="card p-4 flex flex-col gap-3">
  
  <%# --- Header: Name & VLAN --- %>
  <div class="flex items-center justify-between border-be pbe-2">
    <h3 class="font-bold text-lg"><%= subnet.name %></h3>
    <% if subnet.vlan_id.present? %>
      <span class="text-xs font-mono bg-shade border border-gray-200 pi-2 pb-1 rounded-md">
        VLAN <%= subnet.vlan_id %>
      </span>
    <% end %>
  </div>

  <%# --- Network Details --- %>
  <div class="grid grid-cols-2 gap-4">
    <div>
      <span class="block text-xs text-subtle uppercase font-bold mbe-1">Network / CIDR</span>
      <span class="font-mono text-sm bg-blue-50 text-blue-700 pi-2 pb-1 rounded-md inline-block">
        <%= subnet.network_address %>
      </span>
    </div>

    <div class="flex justify-end">
      <div>
        <span class="block text-xs text-subtle uppercase font-bold mbe-1">Gateway</span>
        <span class="font-mono text-sm">
          <%= subnet.gateway %>
        </span>
      </div>
    </div>
  </div>

  <%# --- Stats / Count --- %>
  <div class="flex items-center gap-2 text-sm text-subtle">
    <span class="icon icon--server"></span>
    <span><%= subnet.ip_addresses.count %> Total IPs</span>
  </div>

  <%# --- Actions --- %>
  <div class="flex justify-end gap-4 mbs-2">
    <%= link_to "Show", subnet_path(subnet), class: "text-sm font-medium text-green-600 hover:underline", data: { turbo_frame: "_top" } %>
    <%= link_to "Edit", edit_subnet_path(subnet), class: "text-sm font-medium text-orange-500 hover:underline", data: { turbo_frame: dom_id(subnet) } %>
  </div>
</div>