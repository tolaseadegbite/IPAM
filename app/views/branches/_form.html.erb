<%= form_with(model: branch, html: { contents: true }) do |form| %>
  <%= render "shared/error_messages", object: branch %>

  <div class="grid grid-cols-1 grid-cols-2@md gap-4">
    <div class="col-span-1">
      <%= form.label :name, class: "block font-medium mbe-1" %>
      <%= form.text_field :name, class: "input w-full p-2 border rounded" %>
    </div>
    
    <div class="col-span-1">
      <%= form.label :contact_phone, class: "block font-medium mbe-1" %>
      <%= form.text_field :contact_phone, class: "input w-full p-2 border rounded" %>
    </div>

    <div class="col-span-full">
      <%= form.label :location, class: "block font-medium mbe-1" %>
      <%= form.text_field :location, class: "input w-full p-2 border rounded" %>
    </div>
  </div>

  <div class="flex items-center gap-3 mbs-4">
    <%= form.submit class: "btn bg-orange-400 hover:bg-orange-500 text-white font-semibold rounded px-4 py-2" %>
    <%= link_to "Cancel", branches_path, class: "text-subtle hover:text-black", data: { turbo_frame: "_top" } %>
  </div>
<% end %>