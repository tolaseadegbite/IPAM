<div id="<%= dom_id branch, :card %>" class="card flex flex-col gap-2">
  <div class="flex items-center justify-between">
    <div>
      <span class="text-lg font-semibold"><%= link_to branch.name, branch, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></span>
      <div class="text-subtle text-sm mbs-1">
        <p>📍 <%= branch.location %></p>
        <p>📞 <%= branch.contact_phone %></p>
      </div>
    </div>
    <div class="flex flex-col gap-2 items-end">
      <%= link_to "Edit", edit_branch_path(branch), class: "text-sm text-orange-600 font-medium text-end", data: { turbo_frame: "modal" } %>
      <%= button_to "Delete", branch, method: :delete, class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </div>
</div>