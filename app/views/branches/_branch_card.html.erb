<div id="<%= dom_id(branch, :card) %>" class="card flex flex-col gap-2">
  <div class="flex items-center justify-between">
    <div>
      <span class="text-lg font-semibold"><%= link_to branch.name, branch, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></span>
      <div class="text-subtle text-sm mbs-3">
        <p>ğŸ“ <%= branch.location %></p>
        <p class="mbs-2">ğŸ“ <%= branch.contact_phone.present? ? branch.contact_phone : "Nil" %></p>
      </div>
    </div>
    <div class="flex flex-col justify-end">
      <%= link_to "Edit", edit_branch_path(branch), class: "text-sm text-orange-600 font-medium text-end mie-2", data: { turbo_frame: "modal" } %>
      <% delete_trigger = button_tag "Delete", type: "button", class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50 mbs-3", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
      <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{branch.name}'?" do %>
        <p class="text-sm text-subtle mbe-4">This will permanently delete this branch. This action cannot be undone.</p>
        <div class="flex items-center justify-end gap">
          <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
          <%= button_to "Continue", branch, method: :delete, class: "btn btn--negative" %>
        </div>
      <% end %>
    </div>
  </div>
</div>