<% content_for :title, @branch.name %>

<% content_for :page_header do %>
  <%= @branch.name %>
<% end %>

<% content_for :header_action_buttons do %>
  <div class="flex items-center gap-2">
    <%= link_to "Edit", edit_branch_path(@branch), class: "btn bg-orange-400 text-white font-semibold rounded px-4 py-2 show@md", data: { turbo_frame: "modal" } %>

    <%#= button_to "Delete", @branch, class: "btn bg-white border border-red-200 text-red-600 font-semibold rounded px-4 py-2 hover:bg-red-50", method: :delete, form: { data: { turbo_confirm: "Are you sure?", turbo: false } } %>

    <% delete_trigger = button_tag "Delete", type: "button", class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
    <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{@branch.name}'?" do %>
      <p class="text-sm text-subtle mbe-4">This will permanently delete this branch. This action cannot be undone.</p>
      <div class="flex items-center justify-end gap">
        <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
        <%= button_to "Continue", @branch, method: :delete, data: { turbo: false }, class: "btn btn--negative" %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="absolute hide@md" style="bottom: 10rem; right: 1rem; z-index: 9999">
  <%= link_to edit_branch_path(@branch), class: "btn bg-orange-400 text-white font-semibold rounded-full p-5", data: { turbo_frame: "modal" } do %>
    <span class="icon icon--square-pen"></span>
  <% end %>
</div>

<div class="p-4 max-w-5xl mx-auto">
  <div class="flex items-center justify-between mbe-6">
    <div class="flex items-center gap-4">
      <%= link_to branches_path, class: "btn btn--subtle btn--icon" do %>
        <span class="icon icon--chevron-left"></span>
      <% end %>
      <div id="branch_name">
        <%= render 'branches/branch_name' %>
      </div>
    </div>
  </div>

  <div class="">
    <%# --- Branch Info --- %>
    <div id="branch_details" class="col-span-1">
      <%= render "branches/details" %>
    </div>

    <%# --- Associated Departments --- %>
    <div class="mbs-6">
      <div class="flex items-center justify-between mbe-4 border-be pbe-2">
        <h3 class="font-bold text-lg">Departments (<%= @branch.departments.count %>)</h3>
        <%= link_to "Add Dept", new_department_path(branch_id: @branch.id), class: "text-sm text-orange-600 hover:underline", data: { turbo_frame: "modal" } %>
      </div>
      
      <% if @branch.departments.any? %>
        <%= content_tag(:div, id: dom_id(@branch, :departments), class: "grid grid-cols-1 grid-cols-2@md gap-3") do %>
          <% @departments.each do |department| %>
            <%= render 'branches/department_show_card', department: department %> 
          <% end %>
        <% end %>
      <% else %>
        <div id="empty_state">
          <%= render "shared/empty_state", object: "department" %>
        </div>
      <% end %>
    </div>
  </div>

  <%# --- AUDIT LOG SECTION --- %>
  <div class="mbs-6">
    <% 
      # 1. Branch History
      branch_query = PaperTrail::Version.where(item_type: 'Branch', item_id: @branch.id)

      dept_query = PaperTrail::Version.where(item_type: 'Department', item_id: @branch.department_ids)

      combined_versions = branch_query.or(dept_query).order(created_at: :desc).limit(20)
    %>

    <%= render "shared/audit_log", records: combined_versions, parent: @branch %>
  </div>
</div>