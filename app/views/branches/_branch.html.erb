<tr id="<%= dom_id branch %>" class="transition">
  <td class="p-4 font-medium"><%= branch.name %></td>
  <td class="p-4 text-subtle"><%= branch.location %></td>
  <td class="p-4 text-subtle"><%= branch.contact_phone %></td>
  <td class="p-4 text-end">
    <div class="flex items-center justify-end gap-2">
      <%= link_to "Edit", edit_branch_path(branch), class: "text-orange-600 hover:underline", data: { turbo_frame: dom_id(branch) } %>
      <%= button_to "Delete", branch, method: :delete, class: "text-red-600 hover:underline bg-transparent border-0 cursor-pointer", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </td>
</tr>