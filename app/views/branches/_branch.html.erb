<tr id="<%= dom_id branch %>" class="transition">
  <td class="p-4 font-semibold"><%= link_to branch.name, branch, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></td>
  <td class="p-4 text-subtle"><%= branch.location %></td>
  <td class="p-4 text-subtle"><%= branch.contact_phone %></td>
  <td class="p-4 text-end">
    <div class="flex items-center justify-end gap-4">
      <%= link_to "Edit", edit_branch_path(branch), class: "text-orange-600 hover:underline", data: { turbo_frame: "modal" } %>
      <%= button_to "Delete", branch, method: :delete, class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </td>
</tr>