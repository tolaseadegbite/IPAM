<div class="card bg-white text-start">
    <h3 class="font-bold text-lg mbe-4 border-be pbe-2">Details</h3>
    
    <div class="flex justify-between items-center">
        <div class="mbe-4">
            <label class="text-subtle uppercase font-bold">Location</label>
            <div class="text-sm"><%= @branch.location.present? ? @branch.location : "Nil" %></div>
        </div>

        <div class="mbe-4">
            <label class="text-subtle uppercase font-bold">Contact</label>
            <div class="text-sm"><%= @branch.contact_phone.present? ? @branch.contact_phone : "Nil" %></div>
        </div>
    </div>
</div>