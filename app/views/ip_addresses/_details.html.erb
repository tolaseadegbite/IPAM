<div class="card rounded bg-main">
    <div class="flex items-end justify-between mbe-6 border-be pbe-4">
      <div>
         <h1 class="text-4xl font-mono font-bold text-primary"><%= @ip_address.address %></h1>
         <div class="text-sky-500"><%= @ip_address.subnet.name %></div>
      </div>
      <div>
        <% status_class = @ip_address.available? ? "bg-green-100 text-green-800" : (@ip_address.active? ? "bg-red-100 text-red-800" : "bg-yellow-100 text-yellow-800") %>
        <span class="<%= status_class %> pi-4 by-2 rounded-md text-lg font-bold uppercase"><%= @ip_address.status %></span>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-6">
      <div>
        <label class="block text-xs text-subtle uppercase font-bold mbe-1">Connected Device</label>
        <% if @ip_address.device %>
          <div class="font-bold text-lg"><%= link_to @ip_address.device.name, @ip_address.device, class: "text-green-600 hover:underline" %></div>
          <div class="text-sm text-subtle"><%= @ip_address.device.serial_number %></div>
        <% else %>
          <span class="italic text-gray-400">None</span>
        <% end %>
      </div>
      
      <div class="flex justify-end">
        <div>
            <label class="block text-xs text-subtle uppercase font-bold mbe-1">Notes</label>
            <p class="text-sm"><%= @ip_address.notes.presence || "No notes." %></p>
        </div>
      </div>
    </div>
</div>