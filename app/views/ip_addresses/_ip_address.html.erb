<%# Using a grid card layout for IPs since there are many %>
<div id="<%= dom_id ip_address %>" class="card flex flex-col justify-between">
  <div>
    <div class="font-mono font-bold text-lg"><%= ip_address.address %></div>
    <div class="text-xs text-subtle"><%= ip_address.subnet.name %></div>
  </div>

  <div class="mbs-2">
    <% if ip_address.device %>
      <div class="text-sm font-medium"><%= link_to ip_address.device.name, device_path(ip_address.device), data: { turbo_frame: "_top" } %></div>
      <div class="text-xs text-subtle"><%= ip_address.device.employee&.first_name || "Unassigned" %></div>
    <% else %>
      <span class="text-xs text-subtle italic">Empty Slot</span>
    <% end %>
  </div>

  <div class="mbs-2 pt-2 border-t flex justify-between items-center">
    <% status_class = ip_address.available? ? "text-green-600" : (ip_address.active? ? "text-red-600" : "text-yellow-600") %>
    <span class="text-xs font-bold uppercase <%= status_class %>"><%= ip_address.status %></span>
    
    <%# Edit Status (Reserved/Blacklisted) %>
    <%= link_to edit_ip_address_path(ip_address), class: "text-subtle hover:text-orange-500", data: { turbo_frame: "modal" } do %>
      <span class="text-xs">Edit</span>
    <% end %>
  </div>
</div>