<div id="<%= dom_id employee, :card %>" class="card flex flex-col gap-3">
  <%# --- Header: Name & Status --- %>
  <div class="flex items-start justify-between">
    <div class="flex flex-col">
      <span class="font-semibold text-lg"><%= link_to employee.full_name, employee, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></span>
    </div>
    
    <% status_color = case employee.status 
       when 'active' then 'bg-green-100 text-green-800'
       when 'on_leave' then 'bg-yellow-100 text-yellow-800'
       when 'terminated' then 'bg-red-100 text-red-800'
       end %>
    <span class="<%= status_color %> text-sm font-medium pi-2 rounded-md">
      <%= employee.status.humanize %>
    </span>
  </div>

  <div>
    <%# --- Department Info --- %>
    <div class="flex gap-2 items-center">
      <span class="block text-sm text-subtle font-semibold">Department:</span>
      <div class="text-sm"><%= employee.department.name %></div>
    </div>

    <div class="flex gap-2 items-center">
      <span class="block text-sm text-subtle font-semibold">Branch:</span>
      <div class="text-sm"><%= link_to employee.department.branch.name, branch_path(employee.department.branch), class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></div>
    </div>
  </div>

  <%# --- Actions --- %>
  <div class="flex items-center justify-between">
    <%#= link_to "View Employee", employee, class: "btn btn--primary" %>
    <%= link_to "Edit", edit_employee_path(employee), class: "text-sm font-medium text-orange-600 hover:underline", data: { turbo_frame: "modal" } %>

    <% delete_trigger = button_tag "Delete", type: "button", class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
    <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{employee.full_name}'?" do %>
      <p class="text-sm text-subtle mbe-4">This will permanently delete this employee. This action cannot be undone.</p>
      <div class="flex items-center justify-end gap">
        <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
        <%= button_to "Continue", employee, method: :delete, class: "btn btn--negative" %>
      </div>
    <% end %>
  </div>
</div>