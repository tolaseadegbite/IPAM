<div id="<%= dom_id employee, :card %>" class="card flex flex-col gap-3">
  <%# --- Header: Name & Status --- %>
  <div class="flex items-start justify-between">
    <div class="flex flex-col">
      <span class="font-semibold text-lg"><%= link_to employee.full_name, employee, class: "text-orange-500 hover:text-orange-600", data: { turbo_frame: "_top" } %></span>
      <span class="text-sm text-subtle break-all"><%= employee.email %></span>
    </div>
    
    <% status_color = case employee.status 
       when 'active' then 'bg-green-100 text-green-800'
       when 'on_leave' then 'bg-yellow-100 text-yellow-800'
       when 'terminated' then 'bg-red-100 text-red-800'
       end %>
    <span class="<%= status_color %> text-xs font-medium uppercase pi-2 pb-2 rounded-md">
      <%= employee.status.humanize %>
    </span>
  </div>

  <%# --- Department Info --- %>
  <div class="flex gap-2 items-center">
    <span class="block text-sm text-subtle uppercase font-bold">Department:</span>
    <div class="text-sm"><%= employee.department.name %></div>
  </div>

  <div>
    <div class="text-sm text-subtle"><%= employee.department.branch.name %></div>
  </div>

  <%# --- Actions --- %>
  <div class="flex items-center justify-between">
    <%#= link_to "View Employee", employee, class: "btn btn--primary" %>
    <%= link_to "Edit Profile", edit_employee_path(employee), class: "text-sm font-medium text-orange-600 hover:underline", data: { turbo_frame: "modal" } %>
  </div>
</div>