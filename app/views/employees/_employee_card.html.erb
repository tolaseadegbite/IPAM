<div id="<%= dom_id employee, :card %>" class="card flex flex-col gap-3">
  <%# --- Header: Name & Status --- %>
  <div class="flex items-start justify-between">
    <div class="flex flex-col">
      <span class="font-bold text-lg"><%= employee.first_name %> <%= employee.last_name %></span>
      <span class="text-sm text-subtle break-all"><%= employee.email %></span>
    </div>
    
    <% status_color = case employee.status 
       when 'active' then 'bg-green-100 text-green-800'
       when 'on_leave' then 'bg-yellow-100 text-yellow-800'
       when 'terminated' then 'bg-red-100 text-red-800'
       end %>
    <span class="<%= status_color %> text-xs font-medium uppercase p-2 rounded-md">
      <%= employee.status.humanize %>
    </span>
  </div>

  <%# --- Department Info --- %>
  <div class="text-sm">
    <span class="block text-xs text-subtle uppercase font-bold mbe-1">Department</span>
    <div class="font-medium"><%= employee.department.name %></div>
    <div class="text-xs text-subtle"><%= employee.department.branch.name %></div>
  </div>

  <%# --- Actions --- %>
  <div class="flex items-center justify-between mbs-3">
    <%= link_to "View Employee", employee, class: "btn btn--primary" %>
    <%= link_to "Edit Profile", edit_employee_path(employee), class: "text-sm font-medium text-orange-600 hover:underline", data: { turbo_frame: dom_id(employee) } %>
  </div>
</div>