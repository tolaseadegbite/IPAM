<% content_for :title, "#{@employee.first_name} #{@employee.last_name}" %>

<% content_for :page_header do %>
  <h4 class="font-semibold"><%= @employee.first_name %> <%= @employee.last_name %></h4>
<% end %>

<% content_for :header_action_buttons do %>
  <div class="flex items-center gap-2">
    <%= link_to "Edit Profile", edit_employee_path(@employee),
                  class: "btn bg-orange-400 text-white font-semibold rounded-md p-2 show@md",
                  data: { turbo_frame: "modal" } %>

    <% delete_trigger = button_tag "Delete", type: "button", class: "btn bg-white border border-red-200 text-red-600 font-semibold hover:bg-red-50", data: { action: "dialog#showModal", menu_target: "item" }, role: "menuitem" %>
    <%= modal_dialog delete_trigger, size: "450px", title: "Delete '#{@employee.full_name}'?" do %>
      <p class="text-sm text-subtle mbe-4">This will permanently delete this employee. This action cannot be undone.</p>
      <div class="flex items-center justify-end gap">
        <button type="button" class="btn" data-action="click->dialog#close">Cancel</button>
        <%= button_to "Continue", @employee, method: :delete, data: { turbo: false }, class: "btn btn--negative" %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="absolute hide@md" style="bottom: 10rem; right: 1rem; z-index: 9999">
  <%= link_to edit_employee_path(@employee), class: "btn bg-orange-400 text-white font-semibold rounded-full p-5", data: { turbo_frame: "modal" } do %>
    <span class="icon icon--square-pen"></span>
  <% end %>
</div>

<div class="p-4 max-w-4xl mx-auto">
  <div class="flex items-center justify-between mbe-6">
    <div class="flex items-center gap-4">
      <%= link_to employees_path, class: "btn btn--subtle btn--icon" do %>
        <span class="icon icon--chevron-left"></span>
      <% end %>

      <div id="name">
        <%= render "employees/name" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 grid-cols-3@md gap-4">
    <%# --- Profile Card --- %>
    <div id="profile" class="col-span-1">
      <%= render "employees/profile" %>
    </div>

    <%# --- Assets Card --- %>
    <div class="col-span-2">
      <div class="card">
        <h3 class="font-bold text-lg mbe-4 border-be pbe-2">Assigned Assets</h3>
        <% if @employee.devices.any? %>
          <div class="grid grid-cols-1 gap-4">
            <% @employee.devices.each do |device| %>
              <div class="flex items-center justify-between">
                <div>
                  <div class="font-bold text-lg"><%= link_to device.name, device, class: "hover:text-orange-600" %></div>
                  <div class="text-sm text-subtle"><%= device.device_type.humanize %> &bull; <%= device.serial_number %></div>
                </div>
                <div class="text-right">
                  <% if device.ip_address %>
                    <div class="font-mono text-sky-500 font-bold"><%= device.ip_address.address %></div>
                  <% else %>
                    <div class="text-xs text-subtle italic">No IP</div>
                  <% end %>
                  <div class="text-xs uppercase font-bold mt-1 text-gray-500"><%= device.status %></div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center text-subtle">
            <p>No devices currently assigned.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mbs-4">
    <% 
      employee_versions = @employee.versions.order(created_at: :asc).limit(20) 
    %>
    <%= render "shared/audit_log", records: employee_versions %>
  </div>
</div>