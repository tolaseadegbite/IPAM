<tr id="<%= dom_id employee %>" class="hover:bg-gray-50">
  <td class="p-4">
    <div class="font-medium"><%= employee.first_name %> <%= employee.last_name %></div>
    <div class="text-xs text-subtle"><%= employee.email %></div>
  </td>
  <td class="p-4"><%= employee.department.name %> <span class="text-xs text-subtle block"><%= employee.department.branch.name %></span></td>
  <td class="p-4">
    <% status_color = case employee.status 
       when 'active' then 'bg-green-100 text-green-800'
       when 'on_leave' then 'bg-yellow-100 text-yellow-800'
       when 'terminated' then 'bg-red-100 text-red-800'
       end %>
    <span class="<%= status_color %> text-xs font-medium px-2.5 py-0.5 rounded"><%= employee.status.humanize %></span>
  </td>
  <td class="p-4 text-end">
    <%= link_to "Edit", edit_employee_path(employee), class: "text-orange-600 hover:underline", data: { turbo_frame: dom_id(employee) } %>
  </td>
</tr>